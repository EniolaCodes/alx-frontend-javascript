{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "lib": ["es6", "dom"],
    "allowJs": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "noImplicitThis": true,
    "alwaysStrict": true
  }
}
